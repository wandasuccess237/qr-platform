# Application Configuration
NODE_ENV=production
PORT=3000
APP_URL=https://qr-platform.example.com
APP_NAME=QR Platform

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qr_platform
DB_USER=qr_admin
DB_PASSWORD=your_secure_password_here
DB_SSL=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=30d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=contact@nooaxis-wanda.com
EMAIL_FROM_NAME=NOOAXIS & Wanda Success

# HubSpot CRM Integration (Optional)
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_ENABLED=false

# Salesforce CRM Integration (Optional)
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_ENABLED=false

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=qr-platform-files
AWS_REGION=eu-west-1

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Mixpanel Analytics
MIXPANEL_TOKEN=your_mixpanel_token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://qr-platform.example.com,https://www.qr-platform.example.com

# Security
BCRYPT_ROUNDS=10
MAX_UPLOAD_SIZE=5242880

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENABLED=false

# Feature Flags
ENABLE_LOUMMEL=true
ENABLE_WHEEL_GAME=true
ENABLE_MOBILE_SCANNER=true

# Loummel Configuration
LOUMMEL_URL=https://loummel.example.com
LOUMMEL_API_KEY=your_loummel_api_key

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_NOTIFICATIONS_ENABLED=false

# SMS Configuration (Optional - for SMS notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
SMS_ENABLED=false
