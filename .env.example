# Configuration de l'environnement pour QR Platform

# Application
NODE_ENV=production
PORT=3000
APP_URL=https://votre-site.onrender.com

# Base de données PostgreSQL (fournie par Render)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret (générer avec: openssl rand -base64 32)
JWT_SECRET=votre_secret_jwt_ici
JWT_EXPIRES_IN=7d

# Email (SendGrid)
SENDGRID_API_KEY=votre_cle_sendgrid_ici
FROM_EMAIL=noreply@nooaxis-wanda.com

# CRM Integration (HubSpot)
HUBSPOT_API_KEY=votre_cle_hubspot_ici

# Twilio SMS (optionnel)
TWILIO_ACCOUNT_SID=votre_sid_ici
TWILIO_AUTH_TOKEN=votre_token_ici
TWILIO_PHONE_NUMBER=+237XXXXXXXXX

# CORS Origins
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
